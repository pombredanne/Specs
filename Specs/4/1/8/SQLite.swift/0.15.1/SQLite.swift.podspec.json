{
  "name": "SQLite.swift",
  "version": "0.15.1",
  "summary": "A type-safe, Swift-language layer over SQLite3.",
  "description": "SQLite.swift provides compile-time confidence in SQL statement syntax and\nintent.",
  "homepage": "https://github.com/stephencelis/SQLite.swift",
  "license": "MIT",
  "authors": {
    "Stephen Celis": "stephen@stephencelis.com"
  },
  "source": {
    "git": "https://github.com/stephencelis/SQLite.swift.git",
    "tag": "0.15.1"
  },
  "social_media_url": "https://twitter.com/stephencelis",
  "module_name": "SQLite",
  "default_subspecs": "standard",
  "swift_versions": [
    "5"
  ],
  "platforms": {
    "ios": "12.0",
    "tvos": "12.0",
    "osx": "10.13",
    "watchos": "4.0"
  },
  "subspecs": [
    {
      "name": "standard",
      "source_files": "Sources/SQLite/**/*.{c,h,m,swift}",
      "exclude_files": "Sources/**/Cipher.swift",
      "libraries": "sqlite3",
      "platforms": {
        "ios": "12.0",
        "tvos": "12.0",
        "osx": "10.13",
        "watchos": "4.0"
      },
      "testspecs": [
        {
          "name": "tests",
          "test_type": "unit",
          "resources": "Tests/SQLiteTests/Resources/*",
          "source_files": "Tests/SQLiteTests/*.swift",
          "platforms": {
            "ios": "12.0",
            "tvos": "12.0",
            "osx": "10.13"
          }
        }
      ]
    },
    {
      "name": "standalone",
      "source_files": "Sources/SQLite/**/*.{c,h,m,swift}",
      "exclude_files": "Sources/**/Cipher.swift",
      "xcconfig": {
        "OTHER_SWIFT_FLAGS": "$(inherited) -DSQLITE_SWIFT_STANDALONE",
        "GCC_PREPROCESSOR_DEFINITIONS": "$(inherited) SQLITE_SWIFT_STANDALONE=1"
      },
      "dependencies": {
        "sqlite3": [

        ]
      },
      "platforms": {
        "ios": "12.0",
        "tvos": "12.0",
        "osx": "10.13",
        "watchos": "4.0"
      },
      "testspecs": [
        {
          "name": "tests",
          "test_type": "unit",
          "resources": "Tests/SQLiteTests/Resources/*",
          "source_files": "Tests/SQLiteTests/*.swift",
          "platforms": {
            "ios": "12.0",
            "tvos": "12.0",
            "osx": "10.13"
          }
        }
      ]
    },
    {
      "name": "SQLCipher",
      "source_files": "Sources/SQLite/**/*.{c,h,m,swift}",
      "xcconfig": {
        "OTHER_SWIFT_FLAGS": "$(inherited) -DSQLITE_SWIFT_SQLCIPHER",
        "GCC_PREPROCESSOR_DEFINITIONS": "$(inherited) SQLITE_HAS_CODEC=1 SQLITE_SWIFT_SQLCIPHER=1"
      },
      "dependencies": {
        "SQLCipher": [
          ">= 4.0.0"
        ]
      },
      "platforms": {
        "ios": "12.0",
        "tvos": "12.0",
        "osx": "10.13",
        "watchos": "4.0"
      },
      "testspecs": [
        {
          "name": "tests",
          "test_type": "unit",
          "resources": "Tests/SQLiteTests/Resources/*",
          "source_files": "Tests/SQLiteTests/*.swift",
          "platforms": {
            "ios": "12.0",
            "tvos": "12.0",
            "osx": "10.13"
          }
        }
      ]
    }
  ],
  "swift_version": "5"
}
