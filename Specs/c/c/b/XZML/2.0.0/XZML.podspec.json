{
  "name": "XZML",
  "version": "2.0.0",
  "summary": "XZML 富文本标记语言",
  "description": "XZML 是一款轻量级的 iOS 富文本解决方案，可以快速方便的直接通过字符串构造富文本，用于解决 iOS 开发中，构造富文本繁琐，及不能直接下发富文本的问题。",
  "homepage": "https://github.com/Xezun/XZML",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "Xezun": "developer@xezun.com"
  },
  "source": {
    "git": "https://github.com/Xezun/XZML.git",
    "tag": "2.0.0"
  },
  "platforms": {
    "ios": "12.0"
  },
  "pod_target_xcconfig": {
    "GCC_PREPROCESSOR_DEFINITIONS": "XZ_FRAMEWORK=1"
  },
  "dependencies": {
    "XZDefines/XZMacro": [

    ],
    "XZExtensions/UIColor": [

    ]
  },
  "subspecs": [
    {
      "name": "Code",
      "source_files": "XZML/Code/**/*.{h,m}",
      "private_header_files": "XZML/Code/**/Core/*.h"
    }
  ]
}
